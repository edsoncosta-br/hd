<% if !@positions.empty? %>

  <div class="records text-muted text-end">
    Registros encontrados: <%=@positions_size%>
  </div>

  <div id="modal-place"></div>

  <div class="table-responsive">
    <table class='table table-striped table-hover table-result'>
      <thead>
        <tr>
          <th scope='col'>Descrição</th>
          <th scope='col' class='col-actions'>Ações</th>
        </tr>
      </thead>

      <tbody>
        <% @positions.each do |position| %>
          <tr>
            <td class='align-middle'> <%= position.description %> </td>
            <td class='align-middle'> A B C </td>
          </tr>        
        <% end %>
      </tbody>
    </table>
  </div>    

  <div class="pt-3">
    <%= paginate @positions, window: Constants::PAGINATE_WINDOW, remote: true %>
  </div>   

<% else %>
  <%= render "shared/record_not_found" %>
<% end %>      
