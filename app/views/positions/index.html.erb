<%= render "shared/header" %>
<div id="layoutSidenav">
  <%= render "shared/sidenav" %>
  <div id="layoutSidenav_content">
    <main>
      <div class="container-fluid max-container">
        <div class="page-heading"> 
          <div class="ph-left d-flex pe-3">
            <i class="fa-solid fa-user-group icon-heading"></i>
            <div>Cargos/Funções - Usuários</div>
          </div>
          <div class="ph-right">
            <%= link_to(positions_index_path,  class: "btn btn-action btn-success") do %>
              <i class="fa-solid fa-arrow-right-to-bracket me-2"></i></i> Incluir
            <%end%>             
          </div>          
        </div>
        
        <div class="card">
          <div class="card-body card-style">
 
             <%= form_with(url: positions_search_path, class:'row', method: 'get', local: false) do |form| %>
              <div class="col-12 col-md-6 mb-1">
                <label for="position_id" class="form-label">Descrição</label>
                <input type="text" name="search_description" id="description_id" class="form-control" maxlength="50" autofocus autocomplete="off">
              </div>

              <div class="col-btn-search col-12 col-md-6 align-self-end mb-1">
                <%= button_tag class:"btn btn-outline-success btn-form", data: { disable_with: 'Aguarde..' } do %>
                  <i class="fa-solid fa-magnifying-glass me-1"></i>Consultar
                <% end %>
              </div>
            <% end %>
 
          </div>
        </div>

        <div class='data' id='data-id'></div>
        
      </div>                    
    </main>
  </div>
</div>