<%= render "shared/header" %>
<main>
  <div class="container-fluid max-container">
    <div class="page-heading"> 
      <div class="ph-left d-flex pe-3">
        <i class="fa-solid fa-user-group icon-heading"></i>
        <div>Sistemas - <%= action_message %> </div>
      </div>
      <div class="ph-right">
      </div>          
    </div>

    <div class="card card-size">
      <div class="card-body card-body-style">

        <%= form_with(model: @system ) do |form| %>
          <%= render "shared/error_messages", resource: @system %>

          <div class="row">
            <div class="col-12 mb-3">
              <%= form.label :description, class:"form-label" %>
              <%= form.text_field :description, 
                  class:"form-control #{is_invalid(@system, '_description_isempty_')}", 
                  autofocus: true, autocomplete: :off, maxlength:"60" %>
            </div>
          </div>

          <div class="actions pt-2 text-end">
            <%= form.submit "Salvar", class:"btn btn-success me-1"%>
            <%= link_to 'Cancelar', systems_path, class: 'btn btn-secondary' %>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</main>