<%= render "shared/header" %>
<main>
  <div class="container-fluid max-container">
    <div class="page-heading"> 
      <div class="ph-left d-flex pe-3">
        <i class="fa-solid fa-user-group icon-heading"></i>
        <div>Colaboradores - <%= action_message %> </div>
      </div>
      <div class="ph-right">
      </div>          
    </div>

    <div class="card card-size">
      <div class="card-body card-bd-size">

        <%= form_with(model: @user ) do |form| %>
          <%= render "shared/error_messages", resource: @user %>

          <div class="row">
            <div class="col-12 mb-3">
              <%= form.label :name, class:"form-label" %>
              <%= form.text_field :name, 
                  class:"form-control #{is_invalid(@user, '_name_isempty_')}", 
                  autofocus: true, autocomplete: :off, maxlength:"60" %>
            </div>

            <div class="col-7 mb-3">
              <%= form.label :nick_name, class:"form-label" %>
              <%= form.text_field :nick_name, 
                  class:"form-control #{is_invalid(@user, '_nick_name_isempty_')}", 
                  autofocus: true, autocomplete: :off, maxlength:"20" %>
            </div>
            <div class="col-3 mb-3"></div>

            <div class="col-7 mb-3">
              <%= form.label :email, class:"form-label" %>
              <%= form.text_field :email, 
                  class:"form-control #{is_invalid(@user, '_email_isempty_')}", 
                  autofocus: true, autocomplete: :off, maxlength:"60" %>
            </div>            
            <div class="col-5 mb-3"></div>

            <div class="col-7 mb-3">
              <%= form.label :position_id, class:"form-label"%>
              <%= select_tag :position_id, 
                              options_from_collection_for_select( Position.select(:id, :description)
                                                                  .order("unaccent(description)"), 
                                                                  :id, :description, @user.position_id),
                              include_blank: "Selecione...", 
                              class:"form-select form-control #{is_invalid(@user, '_position_isempty_')}",
                              name:"user[position_id]", autofocus: true, disabled: is_disabled(params[:action]) %>
            </div>            
            <div class="col-5 mb-3"></div>                              

          </div>

          <div class="actions pt-2 text-end">
            <%= form.submit "Salvar", class:"btn btn-sm btn-success me-1"%>
            <%= link_to 'Cancelar', users_path, class: 'btn btn-sm btn-secondary' %>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</main>